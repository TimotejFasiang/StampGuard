{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "StampGuard",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "sidecar": true,
        "scope": [
          { "name": "src/save_image", "sidecar": true, "args": true }
        ]
      },
      "window": {
        "close": true
      },
      "dialog": {
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": {
          "allow": ["$HOME/.local/share/stamp-guard/**", "$RESOURCE/**"]
        }
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$RESOURCE/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "src/save_image"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.timotejfasiang.stampguard",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": {},
      "shortDescription": "",
      "targets": ["deb"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "maximized": true,
        "height": 600,
        "width": 800,
        "resizable": true,
        "title": "StampGuard"

      }
    ]
  }
}
